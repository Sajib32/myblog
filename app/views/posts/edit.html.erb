<% @page_title = "Editing Post" %>

<%= link_to("<<Back to list", {:action => 'list'}) %>

<%= form_for(:post, :url => {:action => 'update', :id => @post.id}) do |f| %>

	<%= render(:partial => 'form', :locals => {:f => f}) %>

	<%= submit_tag('Edit', :style => "margin: 1.5em 0 0 100px;") %>

	<% end %>
<%= link_to('Show Post', {:action => 'show', :id => @post}, :target => '_blank') %>