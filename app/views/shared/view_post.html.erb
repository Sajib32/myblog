
<div id="left-column">
	<p><%= link_to("Back to Main Site", {:action => "list"},
								:style => 'font-size: .8em;') %></p>
			
		<%# @posts.each do |post| %>
			<%#= render(:partial => 'post', :locals => {:post => post}) %>
		<%# end %>
			<%= render(:partial => 'shared/post', :locals => {:post => @post}) %>

		<div class="comments">
		<a name="comments"></a>
			<%= render(:partial => 'shared/comment', :collection => @post.approved_comments) %>
		</div>


		<% if !@comment.blank? %>  <!-- set comment blank as comment is not initiated in posts controller -->
		<div class="comment-form">
			<%= form_for(:comment, :url => {:action => "add_comment", :id => @post.id}) do |f| %>
				<%= render(:partial => 'shared/comment_form', :locals => {:f => f}) %>
				<%= submit_tag("Submit Comment", :style => "margin-left: 105px;") %>
			<% end %>
		</div>
		<% end %>
</div>


<div id="right-column">
	<%= render(:partial => 'custom/about') %>
	<%= render(:partial => 'shared/categories') %>
</div>